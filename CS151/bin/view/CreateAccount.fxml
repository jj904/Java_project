<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #eeeee7;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CreateAccountController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="77.0" prefHeight="300.0" prefWidth="251.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="55.0" prefWidth="313.0" text="Welcome!" textFill="#4a7b6f">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Arial" size="31.0" />
               </font>
            </Label>
            <Label alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="41.0" prefWidth="193.0" text="Create a new account." textFill="#ee6352">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="-5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="nameID" prefHeight="16.0" prefWidth="190.0" promptText="Name">
               <VBox.margin>
                  <Insets top="-10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="userID" prefHeight="16.0" prefWidth="190.0" promptText="Username">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="passID" prefHeight="27.0" prefWidth="290.0" promptText="Password">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="createMessageLbl" alignment="CENTER" prefHeight="37.0" prefWidth="251.0" textAlignment="CENTER" textFill="#ee6352" wrapText="true">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="CreateAccountLbl" mnemonicParsing="false" onAction="#createAccountButton" prefHeight="34.0" prefWidth="145.0" style="-fx-background-color: #7ca683;" text="Create Account" textFill="WHITE">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
